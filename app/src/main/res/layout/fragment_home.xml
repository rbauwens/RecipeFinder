<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EDEEE5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_lunch"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/button_lunch"
        android:textAllCaps="false"
        app:fontFamily="@font/della_respira"
        app:layout_constraintBottom_toTopOf="@+id/button_dessert"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_dinner"
        app:layout_constraintTop_toBottomOf="@+id/button_Brunch"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp" />

    <Button
        android:id="@+id/button_dinner"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/button_dinner"
        android:textAllCaps="false"
        app:fontFamily="@font/della_respira"
        app:layout_constraintBottom_toTopOf="@+id/button_baking"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/button_lunch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_soups"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button_Brunch"
        android:onClick="launchBrunchFragment"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/button_brunch"
        android:textAllCaps="false"
        app:fontFamily="@font/della_respira"
        app:layout_constraintBottom_toTopOf="@+id/button_lunch"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_soups"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp" />

    <Button
        android:id="@+id/button_soups"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/button_soups"
        android:textAllCaps="false"
        app:fontFamily="@font/della_respira"
        app:layout_constraintBottom_toTopOf="@+id/button_dinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/button_Brunch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button_dessert"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/button_dessert"
        android:textAllCaps="false"
        app:fontFamily="@font/della_respira"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_baking"
        app:layout_constraintTop_toBottomOf="@+id/button_lunch"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button_baking"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/button_baking"
        android:textAllCaps="false"
        app:fontFamily="@font/della_respira"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/button_dessert"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_dinner"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>